{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/update-lists",
      "schedule": "0 2 * * *"
    }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 300
    }
  },
  "excludeFiles": [
    "**/__pycache__/**",
    "**/*.pyc",
    "**/test_*",
    "**/tests/**",
    "**/.*",
    "**/README.md",
    "**/DEPLOYMENT.md",
    "**/PROJECT_OVERVIEW.md"
  ]
}
